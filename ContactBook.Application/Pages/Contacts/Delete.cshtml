@page "{contactId}"
@model ContactBook.Application.Pages.Contacts.DeleteModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>You are about to delete a contact</h2>
    <div class="alert alert-danger">
        Are you sure you want to delete @Model.Contact.Name
    </div>
    <form  method="post">
        <button type="submit" class="btn btn-danger">Yes!</button>
        <a class="btn btn-default" asp-page="./List">Cancel</a>
    </form>
</body>
</html>
